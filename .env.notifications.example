# ==============================================
# Asset Health Notification Configuration
# ==============================================
# Copy this file to .env and configure your notification settings

# Enable/disable notifications globally
NOTIFICATIONS_ENABLED=true

# ============== Slack Integration ==============
# Create an incoming webhook at: https://api.slack.com/messaging/webhooks
# Example: https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
SLACK_WEBHOOK_URL=

# ============== Microsoft Teams Integration ==============
# Create an incoming webhook in Teams channel settings
# Example: https://outlook.office.com/webhook/xxx.../IncomingWebhook/yyy.../zzz...
TEAMS_WEBHOOK_URL=

# ============== Email Notifications ==============
EMAIL_NOTIFICATIONS_ENABLED=false

# Comma-separated list of email recipients for alerts
ALERT_EMAIL_RECIPIENTS=ops@example.com,maintenance@example.com

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=
ALERT_EMAIL_FROM=alerts@corridor-communicator.org

# OR AWS SES Configuration (if using AWS SES)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=

# OR SMTP Configuration (if using direct SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=alerts@corridor-communicator.org

# ============== SMS Notifications ==============
SMS_NOTIFICATIONS_ENABLED=false

# Comma-separated list of phone numbers (E.164 format: +1234567890)
ALERT_SMS_RECIPIENTS=+15551234567,+15559876543

# Twilio Configuration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+15551111111

# ============== Ticketing System Integration ==============

# ServiceNow Configuration
SERVICENOW_INSTANCE_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=
SERVICENOW_ASSIGNMENT_GROUP=asset-maintenance-team

# OR Jira Service Desk Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=INFRA
JIRA_ISSUE_TYPE=Incident

# OR Zendesk Configuration
ZENDESK_SUBDOMAIN=your-subdomain
ZENDESK_EMAIL=
ZENDESK_API_TOKEN=
ZENDESK_GROUP_ID=

# ============== Alert Throttling ==============
# Minimum minutes between repeat alerts for same asset (default: 60)
ALERT_THROTTLE_MINUTES=60

# ============== Alert Severity Thresholds ==============
# When to trigger notifications based on uptime percentage
ALERT_CRITICAL_UPTIME_THRESHOLD=95.0
ALERT_WARNING_UPTIME_THRESHOLD=98.0
